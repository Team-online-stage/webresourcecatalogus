                               data-target="#annuleerVerzoek"
                               class="btn btn-danger btn-icon col-md-8">
                                <i class="fas fa-share-square"></i>
                                Annuleer {% if request.properties.ceremonie is defined %}{{ request.properties.ceremonie }}{% else %}aanvraag{% endif %}
